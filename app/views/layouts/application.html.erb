<!DOCTYPE html>
<html>
<head>
  <title>Pinteresting</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default">
	<div class="container-fluid">
	
	<ul class="nav navbar-nav">
	<li><%= link_to "home", root_path, class: "btn btn-default btn-lg"%></li>
	<li><%= link_to "about", about_path,  class: "btn btn-default btn-lg"%></li>
<li>
	<% if user_signed_in?%>
		<%= link_to "Log out",destroy_user_session_path, method: :delete, class: "btn btn-default btn-lg" %>
	<% else%>
		<%= link_to "Sign in",new_user_session_path, class: "btn btn-default btn-lg"%>
	<% end %>
	<li>
	<li><%= link_to "Account Settings", edit_user_registration_path,  class: "btn btn-default btn-lg" %></li>
	</ul>
</div>
</nav>
	<% flash.each do |name, msg| %>
     <%= content_tag(:div, msg, class: "alert alert-info") %>
	<% end %>

<div class="container center">
	<%= yield %>
</div>

</body>
</html>
